@import('./fonts.styl')

greyClr = #7F8C8D
lightGreyClr = #CACFD0
darkGreyClr = #333
orangeClr = #F08641
darkOrangeClr = #D9773F
blueClr = #337AB7

html
  overflow-y scroll

html, body
  margin 0
  padding 0
  background-color #fff
  font-family 'PT Sans', sans-serif
  color orangeClr
  font-size 14px
  height 100%

a
  cursor pointer

.glyphicon
  font-size 40px

#slides
  .page
    &:nth-child(1)
      z-index 10
      color orangeClr
    &:nth-child(2)
      z-index 9
      color orangeClr
    &:nth-child(3)
      z-index 8
    &:nth-child(4)
      z-index 7
      color orangeClr
    &:nth-child(5)
      z-index 6
    &:nth-child(6)
      z-index 5
    &:nth-child(7)
      z-index 4

.page
  &
    width 100%
    background-color #fff
    position absolute
    height 100%
    top -110%
    overflow hidden
    -webkit-transition top 0.6s ease
    -moz-transition top 0.6s ease
    -o-transition top 0.6s ease
    transition top 0.6s ease
    -webkit-transform translateZ(0)
    -moz-transform translateZ(0)
    -ms-transform translateZ(0)
    -o-transform translateZ(0)
    transform translateZ(0)
    box-shadow 8px 8px 0px #aaa

  &.active
    top 0

  & > div
    overflow scroll

  & > div > div
    transition all ease 0.2s

  h1
    font-family "Proxima-Bold"
    text-align center
    margin-top 20%

  &:not(:first-child):not(:last-child)
    & > div
      height 100%
      transition all ease 0.4s
      position relative
    & > div > div:first-child
      position relative
      top 0%
      height 100%

    .title
      &
        margin-top 0
      &__caption
        text-align center
      h1
        margin-top 40px
        display inline-block
      i
        opacity 0.6
        margin-left 18px
        color greyClr
        transition all ease 0.2s
        cursor pointer
        animation:myfirst 2s
      i:hover
        opacity 1

    .content
      &
        text-align center
        width 100%

      &__legend
        color greyClr
        font-size 16px
        width 60%
        max-width 1170px
        margin 12px auto 10px

    .info
      &
        width 100%
        height 100%
        transition all ease 0.4s
        position absolute
        top 50%
        visibility hidden
        transform scale(0)
      &.active
        z-index 9999
        visibility visible
        top 0
        left 0
        transform scale(1)
      h3
        text-align center
        margin-bottom 30px
      p
        color greyClr
        width 90%
        font-size 16px
        margin auto
        margin-bottom 30px

      &__close
        &
          .fa
            float right
            margin-right 10px
            margin-top 12px
            color greyClr
            transition all ease 0.2s
            cursor pointer
        &:hover
          .fa
            color darkGreyClr

      &__content
        width 60%
        height auto
        background white
        margin auto
        margin-top 5%
        border solid 3px lightGreyClr
        border-radius 6px

  &__controllers--previous,
  &__controllers--next
    width 60px
    text-align center
    position absolute
    top 50%
  &__controllers--previous
    left 0
  &__controllers--next
    right 0

.next,
.previous
  &
    font-size 40px
    position relative
    margin 0px
    cursor pointer
    transition all ease 0.2s
    margin-top -30px
  &:hover,
  &:active,
  &:focus
    color darkOrangeClr
  a
    &
      color inherit
      font-size 20px
    &:hover
      text-decoration none

.previous
  margin-left 8px
.next
  margin-right 12px

.info-button
  &
    color orangeClr
    cursor pointer
    transition color ease 0.2s
  &:hover
    color darkOrangeClr
    text-decoration none

.footer
  &
    position absolute
    bottom 0
    height 60px
    width 100%
    z-index 9999

  .underline
    background blueClr
    display block
    position relative
    width 100%
    height 2px
    bottom 35%
    right 0
    transition all ease 0.2s
    -webkit-transform scale(0)
    -moz-transform scale(0)
    -ms-transform scale(0)
    -o-transform scale(0)
    transform scale(0)

  &--left,
  &--right
    &
      width 20%
      position relative
      text-align center
      display inline-block
      color blueClr
      font-family 'Proxima-Light'
      font-size 16px
    a
      transition all ease 0.2s
      display inline-block
    a:hover
      &
        text-decoration none
      .underline
        -webkit-transform scale(1)
        -moz-transform scale(1)
        -ms-transform scale(1)
        -o-transform scale(1)
        transform scale(1)

  &--middle
    &
      width 60%
      position relative
      text-align center
      display inline-block
    ul
      list-style none
    li
      vertical-align middle
      display inline-block
    .fa-circle
      cursor pointer
      transition all ease 0.2s
      vertical-align middle
      opacity 0.6
      margin 0px 8px
    .fa-circle.active
      opacity 1
      font-size 18px
  &--left
    &
      float left
    img
      width 30px
      margin-right 10px
  &--right
    &
      float right
    i.fa-github
      margin 0px 6px
    & > span
      position relative
      display inline-block
    &:hover
      -webkit-transform scale(1)
      -moz-transform scale(1)
      -ms-transform scale(1)
      -o-transform scale(1)
      transform scale(1)

.ribbon
  position fixed
  z-index 9999
  display block
  right -180px
  top 55px
  width 496px
  height 40px
  text-align center
  line-height 42px
  font-size 14px
  font-weight 100
  letter-spacing 1px
  background #ff8937
  color #fff
  -webkit-transform rotate(45deg)
  -moz-transform rotate(45deg)
  transition all ease 0.2s
  cursor pointer
.ribbon:hover
  color #fff
  text-decoration none
  opacity 0.8

